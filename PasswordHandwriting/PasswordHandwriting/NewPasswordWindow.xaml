<Window x:Class="PasswordHandwriting.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordHandwriting"
        mc:Ignorable="d"
        Title="NewPasswordWindow" Height="300" Width="300">
    <Grid>
        <Label x:Name="labelInfo" Content="Введите новый пароль 20 раз" HorizontalAlignment="Left" Margin="58,21,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelCount" Content="Осталось: 20" HorizontalAlignment="Left" Margin="104,52,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxPassword" HorizontalAlignment="Left" Height="23" Margin="77,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" KeyDown="textBoxPassword_KeyDown" KeyUp="textBoxPassword_KeyUp"/>

    </Grid>
</Window>
